rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /users/{userID} {
			allow read;
            allow write: if !request.auth.uid;
            allow write: if request.auth.uid == userID;
    }

    match /posts/{postID} {
        allow read;
        allow write: if request.auth.uid;
    }
  }
}